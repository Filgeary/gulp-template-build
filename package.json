{
  "name": "template-gulp-sass",
  "version": "1.0.0",
  "private": true,
  "description": "template build with gulp & sass",
  "main": "index.html",
  "author": "Filgeary",
  "scripts": {
    "stylelint": "stylelint ./src/sass/**/*.scss --color -f verbose",
    "stylelint-fix": "stylelint ./src/sass/**/*.scss --color -f verbose --fix",
    "htmlhint": "./node_modules/.bin/htmlhint ./src/**/*.html",
    "test": "npm run stylelint && htmlhint",
    "dev": "gulp dev",
    "build": "gulp build",
    "deploy-github": "gulp deployGithub",
    "start": "npm run dev"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-gh-pages": "^0.5.4",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "~7.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify": "^3.0.2",
    "htmlhint": "^0.11.0",
    "husky": "^4.2.3",
    "imagemin-webp": "^5.1.0",
    "lint-staged": "^10.0.7",
    "node-sass": "~4.13.1",
    "prettier": "1.19.1",
    "readable-stream": "^3.6.0",
    "stylelint": "~13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "~20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{html,js,md}": "prettier --write"
  },
  "browserslist": [
    "defaults"
  ],
  "engines": {
    "node": ">=12.15.0",
    "npm": ">=6.13.0"
  }
}
